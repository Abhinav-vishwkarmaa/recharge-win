{
  "info": {
    "name": "RechargeWin Complete API Collection",
    "description": "All API endpoints for RechargeWin gamified recharge platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "userToken",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "winnerId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Register Regular User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"phoneNumber\": \"9876543210\", \"password\": \"password123\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Admin User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"phoneNumber\": \"9999999999\", \"password\": \"admin123\", \"role\": \"admin\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login Regular User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["if (pm.response.code === 200) { const response = pm.response.json(); pm.collectionVariables.set('userToken', response.token); }"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"phoneNumber\": \"9876543210\", \"password\": \"password123\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login Admin User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["if (pm.response.code === 200) { const response = pm.response.json(); pm.collectionVariables.set('adminToken', response.token); }"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"phoneNumber\": \"9999999999\", \"password\": \"admin123\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "üë§ User Profile & Rewards",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/profile",
              "host": ["{{baseUrl}}"],
              "path": ["user", "profile"]
            }
          }
        },
        {
          "name": "Get User Rewards",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/rewards",
              "host": ["{{baseUrl}}"],
              "path": ["user", "rewards"]
            }
          }
        },
        {
          "name": "Add Winner Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"comment\": \"I am so excited to have won! Thank you RechargeWin for this amazing opportunity.\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/user/winners/{{winnerId}}/comment",
              "host": ["{{baseUrl}}"],
              "path": ["user", "winners", "{{winnerId}}", "comment"]
            }
          }
        }
      ]
    },
    {
      "name": "üí∞ Recharge & Payment",
      "item": [
        {
          "name": "Initiate Recharge (New System)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["if (pm.response.code === 200) { const response = pm.response.json(); pm.collectionVariables.set('orderId', response.orderId); }"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"couponId\": \"your-coupon-id-here\", \"rechargePhoneNumber\": \"9876543210\", \"useWallet\": true}"
            },
            "url": {
              "raw": "{{baseUrl}}/recharge/initiate",
              "host": ["{{baseUrl}}"],
              "path": ["recharge", "initiate"]
            }
          }
        },
        {
          "name": "Get Recharge History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/recharge/history?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["recharge", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Verify Recharge Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"orderId\": \"{{orderId}}\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/recharge/verify",
              "host": ["{{baseUrl}}"],
              "path": ["recharge", "verify"]
            }
          }
        }
      ]
    },
